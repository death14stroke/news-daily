<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsDaily" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/san_marino</item>
        <item name="colorPrimaryDark">@color/sapphire</item>
        <item name="colorSecondary">@color/amber</item>
        <item name="colorOnPrimarySurface">@color/periwinkle_gray</item>
        <item name="android:colorBackground">@color/dark_grey</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">
            shortEdges
        </item>
        <item name="android:navigationBarColor">@color/dark_grey</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
    </style>

    <style name="Theme.NewsDaily" parent="Base.Theme.NewsDaily" />

    <style name="Theme.NewsDaily.Splash">
        <item name="postSplashScreenTheme">@style/Theme.NewsDaily</item>
    </style>

    <style name="Theme.NewsDaily.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Theme.NewsDaily.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/textPadding</item>
        <item name="android:layout_marginTop">@dimen/topMargin</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Theme.NewsDaily.Description" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:padding">@dimen/textPadding</item>
        <item name="android:layout_marginTop">@dimen/topMargin</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Theme.NewsDaily.Info" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">@dimen/textPadding</item>
    </style>

    <style name="Theme.NewsDaily.URL" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/textPadding</item>
    </style>

    <style name="CardViewStyle" parent="Theme.NewsDaily.Card">
        <item name="cardBackgroundColor">@color/white_90</item>
    </style>

    <style name="Theme.NewsDaily.AppBarOverlay" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="android:colorControlNormal">@color/white</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="EmptyMessageStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="AppPreference">
        <item name="android:layout" tools:ignore="PrivateResource">
            @layout/preference_material
        </item>
    </style>

    <style name="AppPreference.DialogPreference">
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <item name="searchBackground">?attr/colorPrimaryDark</item>
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search</item>
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>
        <item name="searchSuggestionBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/periwinkle_gray</item>
        <item name="android:hint">@string/search</item>
    </style>
</resources>